/* Body: Center all content vertically and horizontally */
body {
    font-family: 'Arial', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background: linear-gradient(45deg, #f0f8ff, #ff69b4, #ff1493, #ffa500);
    background-size: 400% 400%;
    animation: gradientShift 10s ease infinite;
    overflow: hidden;
}

/* Container: Center everything and add padding */
.container {
    text-align: center;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
    width: 90%;
    max-width: 800px;
}

/* Animated Gradient Background */
@keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

/* Dancing animation for the birthday message */
#birthdayMessage {
    font-size: 2rem;
    color: #ff007f;
    margin-bottom: 20px;
    animation: dance 1.5s infinite ease-in-out;
}

/* Beautiful longer birthday wish text */
#birthdayWish {
    font-size: 1.5rem;
    color: #333;
    line-height: 1.8;
    margin-bottom: 20px;
    text-align: center;
}

/* Pulse effect for emojis */
#dancingEmoji {
    font-size: 3rem;
    animation: pulse 1.5s infinite;
    margin-top: 20px;
}

/* Keyframe animation for dancing effect */
@keyframes dance {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(10deg); }
    50% { transform: rotate(-10deg); }
    75% { transform: rotate(10deg); }
}

/* Keyframe animation for pulsing effect */
@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}

/* Balloon container */
.balloon-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

/* Balloons: Create floating balloons with random speeds and colors */
.balloon {
    position: absolute;
    bottom: 0;
    width: 50px;
    height: 80px;
    background-color: red;
    border-radius: 50%;
    animation: rise 10s infinite ease-in-out;
    opacity: 0.8;
}

/* Balloon rise animation */
@keyframes rise {
    from { transform: translateY(100%); opacity: 0.7; }
    to { transform: translateY(-120%); opacity: 1; }
}

/* Different speeds and colors for balloons */
.balloon:nth-child(odd) { background-color: #ffa500; animation-duration: 8s; }
.balloon:nth-child(even) { background-color: #00bfff; animation-duration: 12s; }

/* Style the Play button */
button {
    padding: 15px 40px;
    background-color: #ff69b4;
    color: white;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    font-size: 1.5rem;
    font-weight: bold;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    margin-top: 30px;
}

/* Hover effect for button */
button:hover {
    background-color: #ff1493;
    transform: scale(1.05);
}
