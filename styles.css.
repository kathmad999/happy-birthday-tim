/* Blinking animation */
@keyframes blink {
    from {
        opacity: 1;
    }
    to {
        opacity: 0;
    }
}

/* Balloon container */
.balloon-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.balloon {
    position: absolute;
    bottom: 0;
    width: 50px;
    height: 80px;
    background-color: red;
    border-radius: 50%;
    animation: rise 10s infinite ease-in-out;
}

/* Rising balloons animation */
@keyframes rise {
    from {
        transform: translateY(100%);
    }
    to {
        transform: translateY(-100%);
    }
}

/* Alternating balloon colors */
.balloon:nth-child(odd) {
    background-color: #ffa500;
}

.balloon:nth-child(even) {
    background-color: #00bfff;
}
